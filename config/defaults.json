{
  "server": {
    "host": "127.0.0.1",
    "port": 3000,
    "shutdownTimeout": 60000
  },
  "logging": {
    "level": "info",
    "rotation": {
      "enabled": true,
      "period": "1d",
      "count": 10
    },
    "transports": ["stdout"],
    "slowHelper": {
      "level": "warn",
      "threshold": 200
    }
  }
}
